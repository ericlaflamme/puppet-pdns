setuid=<%= scope.lookupvar("pdns::resolver::config::user") %>
setgid=<%= scope.lookupvar("pdns::resolver::config::group") %>
local-address=<%= scope.lookupvar("pdns::resolver::config::listen_address") %>
<% if scope.lookupvar("pdns::resolver::config::_dont_query") != :undef -%>
dont-query=<%= scope.lookupvar("pdns::resolver::config::_dont_query") %>
<% end -%>
forward-zones-file=<%= scope.lookupvar("pdns::resolver::config::forward_zones_file") %>

<% additional_config.each do |key, value| -%>
<%= key %>=<%= value %>
<% end -%>
